{
  "name": "{{ name }}",
  "email": "{{ email }}",
  "address": {
    "street": "{{ address.street }}",
    "city": "{{ address.city }}",
    "state": "{{ address.state }}",
    "zip": "{{ address.zip }}"
  },
  "phones": [
    {% for phone in phones %}
    {
      "type": "{{ phone.type }}",
      "number": "{{ phone.number }}"
    }{% if not loop.last %},{% endif %}
    {% endfor %}
  ],
  "preferences": {
    "newsletter": {{ preferences.newsletter | json_bool }},
    "notifications": {
      "email": {{ preferences.notifications.email | json_bool }},
      "sms": {{ preferences.notifications.sms | json_bool }}
    }
  }
}
